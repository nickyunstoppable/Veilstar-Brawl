VITE_MOCK_GAME_HUB_CONTRACT_ID=YOUR_MOCK_GAME_HUB_CONTRACT_ID
VITE_DICE_DUEL_CONTRACT_ID=YOUR_DICE_DUEL_CONTRACT_ID
VITE_NUMBER_GUESS_CONTRACT_ID=YOUR_NUMBER_GUESS_CONTRACT_ID
VITE_TWENTY_ONE_CONTRACT_ID=YOUR_TWENTY_ONE_CONTRACT_ID
VITE_VEILSTAR_BRAWL_CONTRACT_ID=YOUR_VEILSTAR_BRAWL_CONTRACT_ID

# Dev wallet addresses for testing
VITE_DEV_ADMIN_ADDRESS=YOUR_ADMIN_PUBLIC_ADDRESS
VITE_DEV_PLAYER1_ADDRESS=YOUR_PLAYER1_PUBLIC_ADDRESS
VITE_DEV_PLAYER2_ADDRESS=YOUR_PLAYER2_PUBLIC_ADDRESS

# Dev wallet secret keys
VITE_DEV_PLAYER1_SECRET=YOUR_PLAYER1_SECRET
VITE_DEV_PLAYER2_SECRET=YOUR_PLAYER2_SECRET
VITE_DEV_ADMIN_SECRET=YOUR_ADMIN_SECRET

# Local API/server settings
VITE_API_BASE_URL=http://localhost:3001
SERVER_PORT=3001
SERVER_INTERNAL_BASE_URL=http://127.0.0.1:3011
CORS_ORIGIN=http://localhost:3000

# Supabase
VITE_SUPABASE_URL=YOUR_SUPABASE_URL
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_URL=YOUR_SUPABASE_URL
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Frontend labels/runtime helpers
VITE_GAME_TITLE=Veilstar Brawl
VITE_GAME_TAGLINE=ZK Fighting Game on Stellar
VITE_SIMULATION_SOURCE_ADDRESS=YOUR_SIMULATION_SOURCE_ADDRESS
VITE_ZK_API_BASE_URL=https://veilstar-brawl-zk.fly.dev

# ZK / proving settings
ZK_PRIVATE_ROUNDS=true
VITE_ZK_PRIVATE_ROUNDS=true
ZK_VERIFY_ENABLED=true
ZK_PROVE_ENABLED=true
ZK_AUTO_PROVE_FINALIZE=true
ZK_STRICT_FINALIZE=true
ZK_REQUIRE_TRANSCRIPT_HASH=true
ZK_ONCHAIN_COMMIT_GATE=true
ZK_DISABLE_FORFEIT_IN_STRICT=false

# Latency and Strategy Tweaks
# Delay between simulation turns in Phase 3 (ms)
ZK_PRIVATE_ROUND_TURN_DELAY_MS=1000
# TTL for cached Supabase channels to reduce subscription overhead (ms)
REALTIME_CHANNEL_CACHE_TTL_MS=300000

ZK_GROTH16_VERIFIER_CONTRACT_ID=YOUR_ZK_GROTH16_VERIFIER_CONTRACT_ID
ZK_GROTH16_VK_ID=YOUR_32_BYTE_VK_ID_HEX
ZK_VERIFY_CMD=bb verify -k {VK_PATH} -p {PROOF_PATH} -i {PUBLIC_INPUTS_PATH}
ZK_PROVE_CMD=bun zk_service/prove-finalize.ts --input {INPUT_PATH} --proof {PROOF_PATH} --public {PUBLIC_INPUTS_PATH} --match {MATCH_ID} --winner {WINNER_ADDRESS}
ZK_VK_BASE64=YOUR_BASE64_VERIFICATION_KEY
